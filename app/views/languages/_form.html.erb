<%= form_with model: language do |form| %>
    <div>
        <%= form.label :key %><br>
        <%= form.text_field :key %>
        <% language.errors.full_messages_for(:key).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
        <% language.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>