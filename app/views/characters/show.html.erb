<div class="container">
    <div class="row">
        <div class="col-sm">
            <h1><%= @character.name %></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <% if @character.race %>
                <% if @character.subrace %>
                    <p><%= @character.subrace.name %></p>
                <% else %>
                    <p><%= @character.race.name %></p>
                <% end %>
            <% end %>

        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <h2>Features & Traits</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <h3>Languages</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <ul>
                <% @character.race.languages.each do |language| %>
                    <li><%= language.name %></li>
                <% end %>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <ul>
                <li>
                    <%= link_to "Edit", edit_character_path(@character) %>
                </li>
                <li>
                    <%= link_to "Destroy", character_path(@character), method: :delete, data: { confirm: "Are you sure?" } %>
                </li>
            </ul>
        </div>
    </div>
</div>

