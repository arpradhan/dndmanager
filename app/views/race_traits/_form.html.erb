<%= form_with model: race_trait do |form| %>
    <div class="mb-3">
        <%= form.label :key, class: "form-label" %><br>
        <%= form.text_field :key, class: "form-control" %>
        <% race_trait.errors.full_messages_for(:key).each do |message| %>
            <p><%= message %>
        <% end %>
    </div>
    <div class="mb-3">
        <%= form.label :name, class: "form-label" %><br>
        <%= form.text_field :name, class: "form-control" %>
        <% race_trait.errors.full_messages_for(:name).each do |message| %>
            <p><%= message %>
        <% end %>
    </div>
    <div class="mb-3">
        <%= form.label :description, class: "form-label" %><br>
        <%= form.text_area :description, class: "form-control" %>
        <% race_trait.errors.full_messages_for(:description).each do |message| %>
            <p><%= message %>
        <% end %>
    </div>
    <div class="mb-3">
        <%= form.label :trait, class: "form-label" %><br>
        <%= form.text_area :trait, class: "form-control" %>
        <% race_trait.errors.full_messages_for(:trait).each do |message| %>
            <p><%= message %>
        <% end %>
    </div>
    <div class="mb-3">
        <%= form.submit %>
    </div>
<% end %>